<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:alpha="1"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Home System"
        android:textColor="#aaee0000"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/asistoff"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ffffff" />

        <ImageButton
            android:id="@+id/notification_light_off"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/light_off_1"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="19dp" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_light"
            android:backgroundTint="#FFA500"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/notification_light_on"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:alpha="1"

            android:background="@drawable/light_on_1"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="19dp" />

        <Button
            android:id="@+id/asiston"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff" />
    </LinearLayout>

</LinearLayout>