<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Argb_customizeLightOnLightFragment">



    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animația pentru lumină albă"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="699dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <Button
            android:id="@+id/argb_light_on_tip_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip" />

        <Button
            android:id="@+id/argb_light_on_viteza_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viteză" />

        <Button
            android:id="@+id/light_on_sectiuni_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secțiuni"
            tools:visibility="visible" />

        <Button
            android:id="@+id/light_on_increment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Increment" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>