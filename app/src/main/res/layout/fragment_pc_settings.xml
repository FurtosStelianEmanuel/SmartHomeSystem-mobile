<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pcSettings">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/text_sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optiuni sharing"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switch_open_sharing_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deschide Sharing App" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operatiune default" />

        <Switch
            android:id="@+id/switch_tab_nou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tab Nou" />

        <Switch
            android:id="@+id/switch_kill_chrome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Închide Chrome"
            tools:checked="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/text_con_aut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On Resume"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switch_auto_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conectare automata" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textcursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip Cursor"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/grup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/classic_mouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Touch Screen" />

            <RadioButton
                android:id="@+id/touchpad_mouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Touch Pad" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optiuni youtube search"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/youtube_new_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tab Nou" />

        <Switch
            android:id="@+id/youtube_kill_chrome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Închide Chrome" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>